<h1 class="text-center">Yêu cầu mượn sách</h1>

<div class="d-flex justify-content-center">
  <div class="card p-4" style="width: 400px;">
    <%= form_with(model: [@book, @borrow_request], local: true) do |form| %>
      <div class="form-group">
        <%= form.label :start_date, "Ngày bắt đầu" %>
        <%= form.date_field :start_date, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :end_date, "Ngày kết thúc" %>
        <%= form.date_field :end_date, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.submit "Tạo yêu cầu", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <%= link_to "Quay lại", book_path(@book), class: "btn btn-secondary btn-block mt-2" %>
  </div>
</div>

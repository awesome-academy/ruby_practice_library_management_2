<header class="bg-primary text-white">
  <nav class="navbar navbar-expand-lg navbar-light">
    <a class="navbar-brand" href="<%= root_path %>">PiuConal</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "Trang chủ", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Thư viện sách", books_path, class: "nav-link" %>
        </li>
      </ul>
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= form_for(:destroy_user_session, url: destroy_user_session_path, method: :delete, html: { class: "form-inline" }) do %>
              <%= submit_tag "Đăng xuất", class: "btn btn-link nav-link" %>
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Đăng nhập", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Đăng ký", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
